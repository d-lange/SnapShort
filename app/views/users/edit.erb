<h2>Hey <%= @user.username %>, you can change your ussername, password, and email here:</h2>

<%= erb :_errors, locals: {errors: @errors} %>

<form method="post" action="/users">
  <input type="hidden" name="_method" method="put">
  <input type="text" name="user[username]" placeholder="Create a Username">
  <input type="email" name="user[email]" placeholder="Email: email@example.com">
  <input type="password" name="user[password]" placeholder="Create Password">
  <input type="submit" value="Register">
</form>

<span class="delete_prompt">We would hate to see you go...but you can delete your account here</span>

<form method="post" action="/users/<%= @user.id %>">
  <input type="hidden" name="_method" method="delete">
  <input type="submit" value="DELETE ACCOUNT">
</form>
